generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  email        String         @unique @db.VarChar(255)
  username     String?        @db.VarChar(255)
  password     String         @db.VarChar(255)
  profile      UserProfile?
  oAuthIDs     UserOAuthIds[]
  roles        UserRoles[]
  reservations Reservation[]
  createdAt    DateTime       @default(now()) @map("created_at")
  updatedAt    DateTime       @updatedAt @map("updated_at")
}

model UserProfile {
  id        Int    @id @default(autoincrement())
  userID    Int    @map("user_id") @db.Integer
  user      User   @relation(fields: [userID], references: [id])
  firstName String @db.VarChar(255)
  lastName  String @db.VarChar(255)
}

model UserOAuthIds {
  id         Int     @id @default(autoincrement())
  userID     Int     @map("user_id")
  user       User    @relation(fields: [userID], references: [id])
  googleID   String? @map("google_id")
  facebookID String? @map("facebook_id")
}

model Role {
  id          Int         @id @default(autoincrement())
  slug        String      @unique
  name        String      @db.VarChar(32)
  description String      @db.VarChar(255)
  users       UserRoles[]
}

model UserRoles {
  id     Int  @id @default(autoincrement())
  role   Role @relation(fields: [roleID], references: [id])
  user   User @relation(fields: [userID], references: [id])
  roleID Int  @map("role_id")
  userID Int  @map("user_id")
}

model Area {
  id          Int          @id @default(autoincrement())
  name        String       @db.VarChar(32)
  slug        String       @unique @db.VarChar(32)
  prefectures Prefecture[]
  shops       Shop?
}

model Prefecture {
  id     Int    @id @default(autoincrement())
  name   String @db.VarChar(32)
  slug   String @unique @db.VarChar(32)
  areaID Int    @map("area_id") @db.Integer
  area   Area   @relation(fields: [areaID], references: [id])
  cities City[]
  shops  Shop?
}

model City {
  id           Int        @id @default(autoincrement())
  name         String     @db.VarChar(32)
  slug         String     @unique
  prefectureID Int        @map("prefecture_id") @db.Integer
  prefecture   Prefecture @relation(fields: [prefectureID], references: [id])
  shops        Shop?
}

model Shop {
  id           Int            @id @default(autoincrement())
  slug         String?        @db.VarChar(255)
  areaID       Int            @map("area_id") @db.Integer
  area         Area           @relation(fields: [areaID], references: [id])
  prefectureID Int            @map("prefecture_id") @db.Integer
  prefecture   Prefecture     @relation(fields: [prefectureID], references: [id])
  cityID       Int            @map("city_id") @db.Integer
  city         City           @relation(fields: [cityID], references: [id])
  reservations Reservation[]
  stylists     ShopStylists[]
  createdAt    DateTime       @default(now()) @map("created_at")
  updatedAt    DateTime       @updatedAt @map("updated_at")
}

model Stylist {
  id           Int            @id @default(autoincrement())
  shopID       Int            @map("shop_id") @db.Integer
  reservations Reservation[]
  shops        ShopStylists[]
}

model ShopStylists {
  id        Int     @id @default(autoincrement())
  shopID    Int     @map("shop_id") @db.Integer
  stylistID Int     @map("stylist_id") @db.Integer
  shop      Shop    @relation(fields: [shopID], references: [id])
  stylist   Stylist @relation(fields: [stylistID], references: [id])
}

model Reservation {
  id              Int      @id @default(autoincrement())
  shopID          Int      @map("shop_id") @db.Integer
  shop            Shop     @relation(fields: [shopID], references: [id])
  user            User     @relation(fields: [userId], references: [id])
  userId          Int      @map("user_id") @db.Integer
  stylist         Stylist  @relation(fields: [stylistID], references: [id])
  stylistID       Int      @map("stylist_id") @db.Integer
  reservationDate DateTime @db.Timestamp
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
}
