{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@lib/*": [
        "src/lib/*"
      ],
      "@errors/*": [
        "src/errors/*"
      ],
      "@entities/*": [
        "src/entities/*"
      ],
      "@auth/*": [
        "src/controllers/auth/*"
      ],
      "@cron/*": [
        "src/controllers/cron/*"
      ],
      "@location/*": [
        "src/controllers/location/*"
      ],
      "@dashboard/*": [
        "src/controllers/dashboard/*"
      ],
      "@shop/*": [
        "src/controllers/shop/*"
      ],
      "@user/*": [
        "src/controllers/user/*"
      ],
      "@menu/*": [
        "src/controllers/menu/*"
      ],
      "@stylist/*": [
        "src/controllers/stylist/*"
      ],
      "@reservation/*": [
        "src/controllers/reservation/*"
      ],
      "@client/*": [
        "src/controllers/client/*"
      ],
      "@config": [
        "src/config"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@request-response-types/*": [
        "src/request-response-types/*"
      ],
      "@controller-adapter/*": [
        "src/controller-adapter/*"
      ],
      "@tag/*": [
        "src/controllers/tag/*"
      ],
      "@review/*": [
        "src/controllers/review/*"
      ],
      "@prismaConverters/*": [
        "src/lib/prismaConverters/*"
      ]
    },
    /* Basic Options */
    "target": "ES5", /* Specify ECMAScript target version: 'ES3' (default), 'ES5', 'ES2015', 'ES2016', 'ES2017', 'ES2018', 'ES2019', 'ES2020', 'ES2021', or 'ESNEXT'. */
    "module": "commonjs", /* Specify module code generation: 'none', 'commonjs', 'amd', 'system', 'umd', 'es2015', 'es2020', or 'ESNext'. */
    "moduleResolution": "node",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowJs": true, /* Allow javascript files to be compiled. */
    "sourceMap": true, /* Generates corresponding '.map' file. */
    "outDir": "./dist",
    "rootDir": "./",
    "noEmitOnError": true,
    "strict": true,
    "typeRoots": [
      "@types",
      "node_modules/@types",
      "node_modules/@prisma"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  }
}
